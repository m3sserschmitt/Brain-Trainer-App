<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#6200EE"
    android:padding="0dp">

    <TextView
        android:id="@+id/recordTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/deleteRecordButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/deleteRecordButton"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:paddingStart="8dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingEnd="8dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        app:icon="@android:drawable/ic_menu_delete"
        app:iconPadding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toStartOf="@+id/shareRecordButton"
        app:layout_constraintStart_toEndOf="@+id/recordTitleTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/shareRecordButton"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:paddingStart="8dp"
        android:paddingTop="0dp"
        android:paddingEnd="8dp"
        android:textAlignment="center"
        app:icon="@android:drawable/ic_menu_share"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/deleteRecordButton"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>