<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_play">

    <fragment
        android:id="@+id/navigation_play"
        android:name="com.example.braintrainer.ui.game.PlayFragment"
        android:label="Play"
        tools:layout="@layout/fragment_game" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.braintrainer.ui.settings.SettingsFragment"
        android:label="Game settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/navigation_records"
        android:name="com.example.braintrainer.ui.records.RecordsFragment"
        android:label="Records"
        tools:layout="@layout/fragment_records" />
</navigation>